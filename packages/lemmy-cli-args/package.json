{
	"name": "@mariozechner/lemmy-cli-args",
	"version": "0.1.0",
	"description": "Type-safe CLI argument parsing with provider/model validation and schema introspection",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc --build",
		"dev": "tsc --build --watch",
		"test": "vitest",
		"test:run": "vitest run",
		"typecheck": "tsc --noEmit"
	},
	"keywords": [
		"cli",
		"typescript",
		"arguments",
		"parsing",
		"zod",
		"validation",
		"llm",
		"providers"
	],
	"author": "Mario Zechner",
	"license": "MIT",
	"dependencies": {
		"@mariozechner/lemmy": "file:../lemmy",
		"commander": "^12.0.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"tsup": "^8.0.0",
		"typescript": "^5.0.0",
		"vitest": "^3.0.0"
	},
	"peerDependencies": {
		"@mariozechner/lemmy": "^0.1.0"
	}
}
